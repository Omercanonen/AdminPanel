@{
    ViewData["Title"] = "Service Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<AdminPanel.Models.Service.ServiceEntity>

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Dashboard v.4</title>

    <link href="~/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- Morris -->
    <link href="~/inspinia-gh-pages/css/plugins/morris/morris-0.4.3.min.css" rel="stylesheet">

    <link href="~/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/style.css" rel="stylesheet">

</head>
<body>

    <div class="ibox-content">
        <div class="row">
            <div class="col-sm-9 m-b-xs">
                <div class="input-group mb-3">
                    <input type="text" class="form-control form-control-sm" placeholder="Search">
                    <div class="input-group-append">
                        <button class="btn btn-sm btn-primary" type="button">Go!</button>
                    </div>
                </div>

            </div>
            <div class="col-sm-3">
                <div class="input-group mb-3">
      
                        <a asp-controller="Service" asp-action="ServiceCreate" class="btn btn-primary" style="margin-left: auto;">Kullanıcı Ekle</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            @if (Model != null && Model.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">
                                <a asp-action="ServicePage" asp-route-sortOrder="@ViewData["ServiceIdSortParam"]" class="sortable-column">Service Id</a>
                            </th>
                            <th scope="col">
                                <a asp-action="ServicePage" asp-route-sortOrder="@ViewData["CustomerIdSortParam"]" class="sortable-column">Customer Id</a>
                            </th>
                            <th scope="col">
                                <a asp-action="ServicePage" asp-route-sortOrder="@ViewData["EmployeeIdSortParam"]" class="sortable-column">Employee Id</a>
                            </th>
                            <th scope="col">
                                <a asp-action="ServicePage" asp-route-sortOrder="@ViewData["ProductIdSortParam"]" class="sortable-column">Product Id</a>
                            </th>
                            <th scope="col">
                                <a asp-action="ServicePage" asp-route-sortOrder="@ViewData["ModelSortParam"]" class="sortable-column">Model</a>
                            </th>
                            <th scope="col">Warranty</th>
                            <th scope="col">Payment Status</th>
                            <th scope="col">Delivery Status</th>
                            <th scope="col">Delivery Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var service in Model)
                        {
                        <th scope="row">@service.ServiceId</th>
                        <th scope="row">@service.CustomerId</th>
                        <th scope="row">@service.EmployeeId</th>
                        <th scope="row">@service.ProductId</th>
                        <th scope="row">@service.Model</th>
                        @* <th scope="row">@service.Warranty</th> *@
                    <td>
                        <span class="badge @(service.Warranty ? "badge-success" : "badge-danger")">
                                @(service.Warranty ? "Aktif" : "Pasif")
                        </span>
                    </td>
                        @* <th scope="row">@service.PaymentStatus</th> *@
                    <td>
                        <span class="badge @(service.PaymentStatus ? "badge-success" : "badge-danger")">
                                @(service.PaymentStatus ? "Ödendi" : "Ödenmedi")
                        </span>
                    </td>
                        @* <th scope="row">@service.DeliveryStatus</th> *@
                    <td>
                        <span class="badge @(service.DeliveryStatus ? "badge-success" : "badge-warning")">
                                @(service.DeliveryStatus ? "Teslim Edildi" : "Serviste")
                        </span>
                    </td>
                        <th scope="row">@service.DeliveryDate</th>
                        }

                    </tbody>
                </table>
            }
            else
            {
                <p>Kullanıcı Bulunamadı</p>
            }
        </div>

    </div>
    <script src="js/jquery-3.1.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.js"></script>
    <script src="js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Flot -->
    <script src="js/plugins/flot/jquery.flot.js"></script>
    <script src="js/plugins/flot/jquery.flot.tooltip.min.js"></script>
    <script src="js/plugins/flot/jquery.flot.spline.js"></script>
    <script src="js/plugins/flot/jquery.flot.resize.js"></script>
    <script src="js/plugins/flot/jquery.flot.pie.js"></script>
    <script src="js/plugins/flot/jquery.flot.symbol.js"></script>
    <script src="js/plugins/flot/curvedLines.js"></script>

    <!-- Peity -->
    <script src="js/plugins/peity/jquery.peity.min.js"></script>
    <script src="js/demo/peity-demo.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="js/inspinia.js"></script>
    <script src="js/plugins/pace/pace.min.js"></script>

    <!-- jQuery UI -->
    <script src="js/plugins/jquery-ui/jquery-ui.min.js"></script>

    <!-- Jvectormap -->
    <script src="js/plugins/jvectormap/jquery-jvectormap-2.0.2.min.js"></script>
    <script src="js/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>

    <!-- Sparkline -->
    <script src="js/plugins/sparkline/jquery.sparkline.min.js"></script>

    <!-- Sparkline demo data  -->
    <script src="js/demo/sparkline-demo.js"></script>

    <!-- ChartJS-->
    <script src="js/plugins/chartJs/Chart.min.js"></script>

</body>

